<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="../../style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.veltun.gui.Wallet.search.WalletSearchController">
   <children>
      <ListView fx:id="walletListView" layoutX="304.0" layoutY="53.0" prefHeight="500.0" prefWidth="433.0" stylesheets="../../style.css" />
      <Button fx:id="removeWalletButton" layoutX="553.0" layoutY="558.0" mnemonicParsing="false" onAction="#removeWallet" prefHeight="25.0" prefWidth="80.0" stylesheets="../../style.css" text="Supprimer" />
      <Button fx:id="editWalletButton" defaultButton="true" layoutX="643.0" layoutY="558.0" mnemonicParsing="false" onAction="#editWallet" prefHeight="25.0" prefWidth="80.0" stylesheets="../../style.css" text="Modifier" />
      <Button fx:id="addNewWalletButton" defaultButton="true" layoutX="422.0" layoutY="558.0" mnemonicParsing="false" onAction="#addWallet" prefHeight="26.0" prefWidth="119.0" stylesheets="../../style.css" text="Add Wallet" />
      <TextField fx:id="nameSearch" layoutX="426.0" layoutY="20.0" prefHeight="25.0" prefWidth="195.0" />
      <Button fx:id="walletsearchbutton" layoutX="660.0" layoutY="20.0" mnemonicParsing="false" onAction="#search" opacity="0.62" text="Rechercher" />
      <ImageView fx:id="tfimagelogo" fitHeight="51.0" fitWidth="48.0" layoutX="12.0" layoutY="3.0">
         <image>
            <Image url="http://localhost/logo-removebg-preview.png" />
         </image>
      </ImageView>
      <VBox layoutX="10.0" layoutY="54.0" prefHeight="500.0" prefWidth="290.0">
         <children>
            <Button fx:id="toUser" mnemonicParsing="false" onAction="#toUser" prefHeight="26.0" prefWidth="292.0" text="User" />
         </children>
      </VBox>
   </children>
</AnchorPane>
